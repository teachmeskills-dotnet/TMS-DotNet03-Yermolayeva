@model HandiworkShop.Web.ViewModels.OrderEditViewModel

@{ ViewData["Title"] = "Изменить заказ"; }

<form method="post" asp-action="EditOrder" asp-controller="Orders">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title">
        <span asp-validation-for="Title"></span>
    </div>
    <div>
        <label asp-for="Description"></label>
        <input asp-for="Description">
    </div>
    <div>
        <label asp-for="End"></label>
        <input asp-for="End">
        <span asp-validation-for="End"></span>
    </div>
    <div>
        <label asp-for="Price"></label>
        <input asp-for="Price">
        <span asp-validation-for="Price"></span>
    </div>
    <div>
        @if (Model.AllTags.Any())
        {
            @foreach (var tag in Model.AllTags)
            {
                @if (Model.TagIds.Contains(tag.Id))
                {
                    <div>
                        <label>@tag.Name</label>
                        <input type="checkbox" name="TagIds" value=@tag.Id checked>
                    </div>
                }
                else
                {
                    <div>
                        <label>@tag.Name</label>
                        <input type="checkbox" name="TagIds" value=@tag.Id>
                    </div>
                }
            }
        }
    </div>
    <div>
        <input type="hidden" value="@Model.ClientId" name="ClientId">
        <input type="hidden" value="@Model.VendorId" name="VendorId">
    </div>
    <div>
        <input type="submit" value="Создать">
    </div>
</form>