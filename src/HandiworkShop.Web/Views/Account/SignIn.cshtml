@using HandiworkShop.Common.Resourses
@model HandiworkShop.Web.ViewModels.SignInViewModel

@{ ViewData["Title"] = string.Format(PageTitleResource.StringFormat, PageTitleResource.SiteName, PageTitleResource.SignIn); }

<form method="post" asp-controller="Account" asp-action="SignIn" asp-route-return-url="@Model.ReturnUrl" class="template-form">
    <div asp-validation-summary="All"></div>
    <div class="upper-container"></div>
    <div>
        <label asp-for="Username" class="template-label"></label><br />
        <input asp-for="Username" placeholder="Имя пользователя" autocomplete="off" class="template-input">
    </div>
    <div>
        <label asp-for="Password" class="template-label"></label><br />
        <input asp-for="Password" placeholder="Пароль" autocomplete="off" class="template-input">
    </div>
    <div>
        <label asp-for="RememberMe" class="template-label"></label><br />
        <input asp-for="RememberMe" />
    </div>
    <div>
        <input type="submit" value="Вход" class="template-button">
    </div>
</form>