@using HandiworkShop.Common.Resourses
@model HandiworkShop.Web.ViewModels.SignUpViewModel
@{ ViewData["Title"] = string.Format(PageTitleResource.StringFormat, PageTitleResource.SiteName, PageTitleResource.SignUp); }

<form method="post" asp-controller="Account" asp-action="SignUp" class="template-form">
    <div asp-validation-summary="All"></div>
    <div class="upper-container"></div>
    <div>
        <label asp-for="Email" class="template-label"></label><br />
        <input asp-for="Email" placeholder="Email" autocomplete="off" class="template-input">
    </div>
    <div>
        <label asp-for="Username" class="template-label"></label><br />
        <input asp-for="Username" placeholder="Имя пользователя" autocomplete="off" class="template-input">
    </div>
    <div>
        <label asp-for="IsVendor" class="template-label"></label><br />
        <input asp-for="IsVendor">
    </div>
    <div>
        <label asp-for="Password" class="template-label"></label><br />
        <input asp-for="Password" placeholder="Пароль" autocomplete="off" class="template-input">
    </div>
    <div>
        <label asp-for="PasswordConfirm" class="template-label"></label><br />
        <input asp-for="PasswordConfirm" autocomplete="off" class="template-input">
    </div>
    <div>
        <input type="submit" value="Регистрация" class="template-button">
    </div>
</form>